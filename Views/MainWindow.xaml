<Window
    x:Class="PdfAnnoRemover.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PdfAnnoRemover"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:PdfAnnoRemover.ViewModels"
    Title="PDF Annotation Remover"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <Grid Margin="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Directory:" />
                <TextBox
                    Grid.Column="1"
                    Margin="8,0"
                    Text="{Binding SourceDirectory, UpdateSourceTrigger=PropertyChanged}">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="IsEnabled" Value="True" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsRunning}" Value="True">
                                    <Setter Property="IsEnabled" Value="False" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button
                        Grid.Column="2"
                        Width="60"
                        Margin="0,0,8,0"
                        Padding="5,0"
                        Command="{Binding BrowseCommand}"
                        Content="Browse" />
                    <Button
                        Grid.Column="3"
                        Width="60"
                        Margin="0,0,8,0"
                        Padding="5,0"
                        Command="{Binding StartOrStopCommand}">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Content" Value="Start" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsRunning}" Value="True">
                                        <Setter Property="Content" Value="Cancel" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <CheckBox
                        Grid.Column="4"
                        VerticalAlignment="Center"
                        IsChecked="{Binding IsRecursive}">
                        <CheckBox.Style>
                            <Style TargetType="CheckBox">
                                <Setter Property="IsEnabled" Value="True" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsRunning}" Value="True">
                                        <Setter Property="IsEnabled" Value="False" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </CheckBox.Style>
                        Recursive
                    </CheckBox>
                    <Button
                        Grid.Column="2"
                        Width="60"
                        Margin="8,0,0,0"
                        Padding="5,0"
                        Command="{Binding ExportCommand}"
                        Content="Export" />
                </StackPanel>
            </Grid>
        </StackPanel>

        <DataGrid
            Grid.Row="1"
            AutoGenerateColumns="False"
            HeadersVisibility="Column"
            IsManipulationEnabled="False"
            IsReadOnly="True"
            ItemsSource="{Binding Files}"
            SelectedItem="{Binding SelectedFile}"
            VirtualizingPanel.IsVirtualizing="True">
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Command="{Binding OpenFolderCommand}" Header="Open folder" />
                </ContextMenu>
            </DataGrid.ContextMenu>
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="2*"
                    Binding="{Binding Filename}"
                    Header="File name" />
                <DataGridTextColumn
                    Width="2*"
                    Binding="{Binding Path}"
                    Header="Full path" />
                <DataGridTextColumn
                    Width="60"
                    Binding="{Binding RemovedCount}"
                    Header="Removed" />
                <DataGridTextColumn
                    Width="3*"
                    Binding="{Binding Comment}"
                    Header="Status" />
            </DataGrid.Columns>
        </DataGrid>

        <StatusBar Grid.Row="2">
            <StatusBarItem Grid.Column="0" Content="{Binding Status}">
                <StatusBarItem.Style>
                    <Style TargetType="StatusBarItem">
                        <Setter Property="Foreground" Value="Black" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsError}" Value="True">
                                <Setter Property="Foreground" Value="Red" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </StatusBarItem.Style>
            </StatusBarItem>

            <StatusBarItem HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Files:" />
                    <TextBlock Margin="5,0" Text="{Binding FilesCount}" />

                    <ProgressBar
                        Width="150"
                        Height="16"
                        d:Visibility="Visible"
                        Maximum="100"
                        Minimum="0"
                        Visibility="{Binding ProgressBarVisibility, Mode=OneWay}"
                        Value="{Binding Progress, Mode=OneWay}" />
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
